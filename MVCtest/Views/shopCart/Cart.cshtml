@model List<MVCtest.ViewModels.CartViewModel>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_shop.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<!-- cart section end -->
<section class="cart-section spad">
    <div class="container-fluid">
        <div class="row">
            <div class="yourcart col-lg-12">
                <div class="step1">
                    <div class="cart-table">
                        <h3>Your Cart</h3>
                        <div class="cart-table-warp">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-th"><h6>商品圖片</h6></th>
                                        <th class="productname-th"><h6>商品名稱</h6></th>
                                        <th class="size-th"><h6>編號</h6></th>
                                        <th class="size-th"><h6>規格</h6></th>
                                        <th class="total-th"><h6>單價</h6></th>
                                        <th class="quy-th"><h6>數量</h6></th>
                                        <th class="total-th"><h6>小計</h6></th>
                                        <th class="total-th"><h6>刪除</h6></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="tests">
                                            <td class="product-col">
                                                <img src="@item.ProductImage" alt="商品圖片">
                                                @*<div class="pc-title">
                                        <h4>@item.ProductName</h4>
                                    </div>*@
                                            </td>
                                            <td class="size-col"><h6>@item.ProductName</h6></td>
                                            <td class="size-col"><h6>@item.ProductNo</h6></td>
                                            <td class="size-col"><h6>@item.Size</h6></td>
                                            <td class="total-col unitPrice"><h6>@item.Unitprice</h6></td>
                                            <td class="quy-col">
                                                <div class="quantity">
                                                    <div class="pro-qty">
                                                        <input type="text" class="qty" value="@item.Quantity">
                                                        <input type="hidden" name="cartID" value="@item.CartId" />
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="total-col">
                                                <h6 class="eachPrice">$@(item.Quantity * int.Parse(item.Unitprice))</h6>
                                            </td>
                                            <td>
                                                <sapn class="delete" id="delete" name="delete"><i class="fa fa-trash-o"></i></sapn>
                                                <input type="hidden" name="cartID" value="@item.CartId" />
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <div class="total-cost">
                            <h6>Total <span id="total">$0</span></h6>
                        </div>
                    </div>
                    <div class="d-flex justify-content-lg-end bottom-btn">
                        <a href="#" class="site-btn sb-dark">繼續購物</a>
                        <span class="site-btn checkout" id="nextStep">下一步</span>
                    </div>
                </div>

                <form action="/shopCart/SaveOrder" method="post">
                <div class="step2" style="display:none;">
                    <div class="cart-table">
                        <h3>Please provide information about the recipient</h3>
                        <table>
                            <tbody>
                                <tr>
                                    <td>
                                        <label>
                                            <h6>選擇配送方式:</h6>
                                            <select name="shipperID">
                                                <option value=""></option>
                                                <option value="1"><h6>7-11超商</h6></option>
                                                <option value="2"><h6>全家超商</h6></option>
                                                <option value="3"><h6>黑貓宅急便</h6></option>
                                            </select>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label><h6><span>收件人姓名:</span> <input type="text" name="name" value="" /></h6></label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label><h6><span>手機號碼:</span><input type="tel" name="tel" value="" /></h6></label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label><h6><span>超商地址:</span><input type="text" name="address" value="" class="input-address" /></h6></label>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-lg-end bottom-btn">
                        <span class="site-btn sb-dark" id="preStep">上ㄧ步</span>
                        <input type="submit" name="name" value="完成" class="site-btn checkout"/>
                    </div>
                </div>
                    </form>
            </div>
        </div>
    </div>
</section>

<!-- cart section end -->
