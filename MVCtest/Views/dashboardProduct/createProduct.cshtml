
@{
    ViewBag.Title = "createProduct";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">*@
<link href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css' rel='stylesheet'></link>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="/Assest/dashboardAssets/dashboardDemo/upload.css">

<div class="container-fluid">
    <div class="col-11">
        <div class="btn btn-primary" id="create" >新增</div>
        @*<button class="btn btn-primary">T2</button>*@
        <table id="datatables" class="table table-hover" style=" width:120%">
            <thead>
                <tr>
                    <th>商品名稱</th>
                    <th>價錢</th>
                    <th>子分類</th>
                    <th>大分類</th>
                    <th>商品縮圖</th>
                    <th>動作</th>
                </tr>
            </thead>

        </table>
    </div>


    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modal_title"></h4>
                </div>
                <div class="modal-body">
                    <form id="formEdit" role="form">
                        <div class="form-group">
                            <label for="beacon_id"><span class="glyphicon glyphicon-pencil"></span>商品名稱</label>
                            <input type="text" class="form-control" id="Product_Name" name="Product_Name" placeholder=""
                                   required="true">
                        </div>

                        <div class="form-group">
                            <label for="beacon_content"><span class="glyphicon glyphicon-pencil"></span>價錢</label>
                            <input type="text" class="form-control" id="UnitPrice" name="UnitPrice" placeholder=""
                                   required="true">
                        </div>
                        <div class="form-group">
                            <label for="beacon_content"><span class="glyphicon glyphicon-pencil"></span>子分類</label>
                            <input type="text" class="form-control" id="Sub_Category_Name" name="Sub_Category_Name" placeholder=""
                                   required="true">
                        </div>

                        <div class="form-group">
                            <label for="beacon_content"><span class="glyphicon glyphicon-pencil"></span>大分類</label>
                            <input type="text" class="form-control" id="CategoryGroup_Name" name="CategoryGroup_Name" placeholder=""
                                   required="true">
                        </div>

                        <div class="form-group">
                            <div class="avatar-upload">
                                <div class="avatar-edit">
                                    <input type='file' id="imageUpload" accept=".png, .jpg, .jpeg" />
                                    <label for="imageUpload"></label>
                                </div>
                                <div class="avatar-preview">
                                    <div id="imagePreview">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" id="type" name="type" value="">
                        <button type="submit" class="btn btn-success btn-block">
                            <span class="glyphicon glyphicon-ok"></span> OK
                        </button>
                    </form>
                </div>


            </div>
        </div>
    </div>

    <div class="modal fade" id="confirmDelete" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Are you sure?</h4>
                </div>
                <div class="modal-body">
                    <button type="button" data-dismiss="modal" class="btn btn-primary" id="delete">Delete</button>
                    <button type="button" data-dismiss="modal" class="btn">Cancel</button>
                </div>
            </div>
        </div>
    </div>


    <!--NEW modal-->


    <div class="modal fade" id="newModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modal_title"></h4>
                </div>
                <div class="modal-body">

                    <form id="formNew" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label for="beacon_id"><span class="glyphicon glyphicon-pencil"></span>商品名稱</label>
                            <input type="text" class="form-control" id="Product_Name" name="Product_Name" placeholder=""
                                   required="true">
                        </div>

                        <div class="form-group">
                            <label for="beacon_content"><span class="glyphicon glyphicon-pencil"></span>價錢</label>
                            <input type="text" class="form-control" id="UnitPrice" name="UnitPrice" placeholder=""
                                   required="true">
                        </div>
                        <div class="form-group">
                            <label for="beacon_content"><span class="glyphicon glyphicon-pencil"></span>子分類</label>
                            <input type="text" class="form-control" id="Sub_Category_Name" name="Sub_Category_Name" placeholder=""
                                   required="true">
                        </div>

                        <div class="form-group">
                            <label for="beacon_content"><span class="glyphicon glyphicon-pencil"></span>大分類</label>
                            <input type="text" class="form-control" id="CategoryGroup_Name" name="CategoryGroup_Name" placeholder=""
                                   required="true">
                        </div>

                        <div class="form-group">
                            <label for="beacon_content"><span class="glyphicon glyphicon-pencil"></span>UPLOAD</label>
                            <input type="file" id="file" class="form-control" name="file"  required="true">
                        </div>

                        <input type="hidden" id="type" name="type" value="">
                        <button type="submit" class="btn btn-success btn-block">
                            <span class="glyphicon glyphicon-ok"></span> OK
                        </button>
                    </form>
                </div>


            </div>
        </div>
    </div>
</div>





<!--SCRIPT-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

<script src="/Assest/dashboardAssets/dashboardDemo/upload.js"></script>
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script src="/Assest/dashboardAssets/dashboardDemo/getProduct.js"></script>