@model  MVCtest.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_shop.cshtml";
}

<section class="category-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-2 order-lg-1">
                <div class="filter-widget">
                    <h2 class="fw-title">Tags</h2>
                    <ul class="category-menu">
                        <li>
                            <h4 class="group">>size</h4>
                            <ul style="display:none;">
                                <li>
                                    <label><input type="checkbox" name="#" class="filter size-filter" data-size="S">S</label>
                                </li>
                                <li>
                                    <label><input type="checkbox" name="#" class="filter size-filter" data-size="M">M</label>
                                </li>
                                <li>
                                    <label><input type="checkbox" name="#" class="filter size-filter" data-size="L">L</label>
                                </li>
                                <li>
                                    <label><input type="checkbox" name="#" class="filter size-filter" data-size="XL">XL</label>
                                </li>

                            </ul>
                        </li>
                        <li>
                            <h4 class="group">>color</h4>
                            <ul class="row" style="display:none;">

                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="black" style="display:none;"><span class="color-radio black"></span>
                                </li>
                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="gray" style="display:none;"><span class="color-radio gray"></span>
                                </li>
                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="white" style="display:none;"><span class="color-radio white"></span>
                                </li>
                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="blue" style="display:none;"><span class="color-radio blue"></span>
                                </li>
                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="red" style="display:none;"><span class="color-radio red"></span>
                                </li>
                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="green" style="display:none;"><span class="color-radio green"></span>
                                </li>
                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="yellow" style="display:none;"><span class="color-radio yellow"></span>
                                </li>
                                <li>
                                    <input type="checkbox" name="#" class="filter color-filter" data-color="brown" style="display:none;"><span class="color-radio brown"></span>
                                </li>

                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="filter-widget mb-0">
                    <div class="price-range-wrap">
                        <h3>Price</h3>

                        <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content" data-min="0" data-max="5000">
                            <div class="ui-slider-range ui-corner-all ui-widget-header" style="left: 0%; width: 100%;"></div>
                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default" style="left: 0%;">
                            </span>
                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default" style="left: 100%;">
                            </span>
                        </div>
                        <div class="range-slider">
                            <div class="price-input">
                                <input type="text" id="minamount" class="price1">
                                <input type="text" id="maxamount" class="price2">
                            </div>
                        </div>
                    </div>
                    <div>
                        <span class="btn btn-danger" id="priceBtn">價格篩選</span>
                        <span class="btn btn-danger"id="reset">重新設定</span>
                    </div>
                </div>


            </div>

            <div class="col-lg-9  order-1 order-lg-2 mb-5 mb-lg-0">
                <div class="row">
                    <!--Product Category for each-->
                    @foreach(var item in Model.Items){

                            <div class="col-lg-4 col-sm-6 productItem product-item" data-category="@item.Category_Id" data-color="black" data-size="M" data-price=@item.UnitPrice>
                                <div class="pi-pic">
                                    @*<div class="tag-sale">ON SALE</div>*@
                                    <a href="~/shopProduct/detail/@item.Product_Id"><img src="@item.Product_Image" ></a>
                                    <div class="pi-links">
                                        <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                        <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                                    </div>
                                </div>
                                <div class="pi-text">
                                    <h6>$@item.UnitPrice</h6>
                                    <p>@item.Product_Name</p>
                                </div>
                            </div>
                    }

                        <div class="productItem" style="display:none"></div>
                    <!--Product Category for each- END-->

                    <div class="text-center w-100 pt-3">
                        <button class="site-btn sb-line sb-dark">LOAD MORE</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Category section end -->
