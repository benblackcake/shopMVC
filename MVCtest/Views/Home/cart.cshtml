
@{
    ViewBag.Title = "style'G：購物車";
}

<link href="~/Assest/css/cart.css" rel="stylesheet" />
<link href="~/Assest/js/cart.js" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
      integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
      crossorigin="anonymous">

<div class="container">
    <h1>購物車</h1>
    <div class="process">
        <span class="done">1 確認購物車內商品</span>
        <span>> 2 選擇付款方式</span>
        <span>> 3 填寫送貨資料</span>
        <span>> 4 購物完成</span>
    </div>
    <div class="cart">
        <div class="cart_header">
            <div class="c_1">商品圖片</div>
            <div class="c_2">商品名稱</div>
            <div class="c_3">編號</div>
            <div class="c_4">規格</div>
            <div class="c_5">單價</div>
            <div class="c_6">數量</div>
            <div class="c_7">小計</div>
            <div class="c_8">刪除</div>
        </div>
        <div class="commodity">
            <a href="" class="c_1"><img src="@*https://styleo.net/storage/products/2018-12/res_20181211005328242.jpg*@" alt="商品圖片" /></a>
            <div class="c_2">復古造型金邊眼鏡</div>
            <div class="c_3">81266</div>
            <div class="c_4">F</div>
            <div class="c_5">NT$680</div>
            <div class="c_6">
                <span class="input-number-decrement" id="inc">-</span>
                <input type="text" class="input-number" id="count" value="1" min="0" max="10" />
                <span class="input-number-increment" id="dec">+</span>
            </div>
            <div class="c_7">NT$680</div>
            <div class="c_8"><button class="delect"><i class="fas fa-trash-alt"></i></button></div>
        </div>
        <div class="total_box">
            <div total_row><div class="total_left">購物車內共<span></span>項商品，商品總金額為</div commodity_total><div></div></div>
            <div total_row><div class="total_left">運費</div><div class="freight"></div></div>
            <div total_row><div class="total_left">總計</div><div class="all_total"></div></div>
        </div>
    </div>
    <div><button class="nextStep">下一步</button></div>
</div>
