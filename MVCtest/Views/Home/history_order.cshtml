@model MVCtest.ViewModels.OrderTrackingListViewModel
@{
    ViewBag.Title = "history_order";
}

@section topCSS {
    <style>
        .col-2 {
            /*background-color: azure;*/
            border: none;
            /*border-right: 1px solid black;*/
            height: 800px;
        }

        .col-10 {
            /*background-color: burlywood;*/
            height: 800px;
        }

        #left-list ul {
            margin-top: 40px;
            list-style: none;
        }

        #left-list li {
            margin-top: 15px;
            margin-left: 20px;
        }

        .btn.btn-edit,
        .btn.btn-cancel {
            font-size: 15px;
            padding: 0 1.5em;
            height: 37px;
            line-height: 37px;
            color: #3c3d41;
            background-color: transparent;
            border: 1px solid #5b5b5b;
            border-radius: 4px;
        }

            .btn.btn-edit:hover,
            .btn.btn-cancel:hover {
                background: #222;
                box-shadow: none;
                color: white;
            }
        .order_tracking {
            display: block;
            text-align: center;
        }
            .order_tracking h3 {
                margin-top: 15px;
            }

        .order_title {
            display: block;
            height: 40px;
            background: #636262;
            border-bottom: 2px solid #555;
            color: #fafafa;
            margin-top:20px;
        }

        #col-name {
            display: flex;
            line-height: 40px;
        }

        .detail {
            text-align:center;
        }

        .card {
            height:120px;
        }

        .card-item {
            display: flex;
            line-height: 120px;
        }

        .card-detail {
            text-align:center;
                
        }

        #top_center h3{
            text-align:left;
        }

        #top_select {
            height:30px;
            display:flex;
        }
         
        #top_select .col-6 p {
            font-size:25px;
            line-height:30px;
            text-align:center;
            width:auto;
        }

        #top_select p {
            font-size:20px;
        }
        

    </style>
}
