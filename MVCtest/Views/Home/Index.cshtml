@section endJS{    
    <script>    /*更動*/
        $(function () {
            $(".float").hide();
        
            $(window).scroll(function () {
                
                if ($(this).scrollTop() < 600) {
                    $(".float").css("opacity", "0");
                    $(".float").fadeOut();
                    $(".float").fadeOut("slow");
                }
                else if ($(this).scrollTop() > 600) {  
                    $(".float").css("opacity", "1");
                    $(".float").fadeIn();
                    $(".float").fadeIn("slow");
                }
                
                
            })

        });
    </script>

